<h2><%= @brand.name %> の店舗一覧</h2>

<!-- ブランドに紐づく店舗一覧 -->
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>店舗名</th>
      <th>住所</th>
      <th>電話番号</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.order(:position).each do |store| %>
      <tr>
        <td><%= store.id %></td>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ブランド一覧へ戻る', brands_path, class: 'btn-primary' %>