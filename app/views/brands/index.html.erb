


      <!-- ブランド一覧のタイトル -->
      <h1>ブランド一覧</h1>

      <!-- 新しいブランドを作成するボタン -->
      <%= link_to '新しいブランドを作成', new_brand_path, class: 'btn-primary' %>

      <!-- ブランドカード表示 -->
      <div class="grid">
        <% @brands.each do |brand| %>
          <div class="card">
            <div class="h3"><%= brand.name %></div>

            <div>
              <p>
                <%= link_to '店舗一覧', brand_path(brand) %>
              </p>
              <p>
                <%= link_to 'ブランドの編集', edit_brand_path(brand) %>
              </p>
              <p>
                <%= link_to 'ブランドの削除', brand_path(brand), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn-delete" %>
              </p>
            </div>

          </div>
        <% end %>
      </div>