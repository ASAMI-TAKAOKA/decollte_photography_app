<h1><%= @brand.name %> の店舗一覧</h1>

<%= link_to '新規店舗作成', new_brand_store_path(@brand), class: 'btn-primary' %>

<table>
  <thead>
    <tr>
      <th>並び順変更</th>
      <th>id</th>
      <th>店舗名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.order(:position).each do |store| %>
      <tr>
        <td>
          <%= link_to '⬆', move_higher_brand_store_path(@brand, store) %>
          <%= link_to '⬇', move_lower_brand_store_path(@brand, store) %>
        </td>
        <td><%= store.id %></td>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.phone_number %></td>

        <td>
          <%= link_to '詳細', brand_store_path(@brand, store) %>
          <%= link_to '編集', edit_brand_store_path(@brand, store) %>
          <%= link_to '削除', brand_store_path(@brand, store), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ブランド一覧に戻る', brands_path %>
