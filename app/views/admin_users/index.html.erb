<% content_for :title, "管理者一覧" %>

<h1>管理者一覧</h1>

<%= link_to '管理者を新規作成する', new_admin_user_path %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>ユーザー名</th>
      <th>役割</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.id %></td>
        <td><%= admin_user.username %></td>
        <td><%= admin_user.role == 1 ? '特権管理者' : '一般管理者' %></td>
        <td>
          <%= link_to '詳細', admin_user_path(admin_user) %>
          <%= link_to '編集', edit_admin_user_path(admin_user) %>
          <%= link_to '削除', admin_user_path(admin_user), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to "Back to home", root_path %>
